{
  "type": "AppView",

  "title": "resource: IDS_APP_TITLE",
  "icon": "resource: IDI_UIGLUE",
  "smallIcon": "resource: IDI_SMALL",

  "menu": {
    "menu": "resource: IDC_UIGLUE",
    "commands": {
      "IDM_EXIT": "onExit",
      "IDM_ABOUT": "onAbout"
    }
  },

  "children": {
    "editLabel": {
      "type": "Static",
      "text": "Name:"
    },
    "nameEdit": {
      "type": "Edit",
      "value": "bind: name"
    },
    "generateButton": {
      "type": "Button",
      "text": "Generate greeting",
      "visible": "bind: !automatic"
    },
    "autoCheckbox": {
      "type": "Checkbox",
      "text": "Automatically generate greeting",
      "checked": "bind: automatic"
    },
    "message": {
      "type": "Static",
      "text": "bind: greeting"
    }
  },

  "layout": {
    "direction": "vertical",
    "contents": [
      "editLabel",
      {
        "direction": "horizontal",
        "grow": [1, 0],
        "contents": [
          "nameEdit",
          "generateButton"
        ]
      },
      "autoCheckbox",
      "message"
    ]
  }
}
