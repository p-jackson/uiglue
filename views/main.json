{
  "type": "AppView",

  "title": "resource: IDS_APP_TITLE",
  "icon": "resource: IDI_UIGLUE",
  "smallIcon": "resource: IDI_SMALL",

  "menu": {
    "menu": "resource: IDC_UIGLUE",
    "commands": {
      "IDM_EXIT": "onExit",
      "IDM_ABOUT": "onAbout"
    }
  },

  "children": {
    "editLabel": {
      "type": "Static",
      "text": "Name:"
    },
    "nameEdit": {
      "type": "Edit",
      "value": "bind: name"
    },
    "modalButton": {
      "type": "Button",
      "text": "Show modal greeting",
      "click": "onModalGreeting"
    },
    "shoutCheckbox": {
      "type": "Checkbox",
      "text": "Shout",
      "checked": "bind: shout"
    },
    "message": {
      "type": "Static",
      "text": "bind: greeting"
    }
  },

  "layout": {
    "direction": "vertical",
    "contents": [
      "editLabel",
      {
        "direction": "horizontal",
        "grow": [1, 0],
        "contents": [
          "nameEdit",
          "modalButton"
        ]
      },
      "shoutCheckbox",
      "message"
    ]
  }
}
